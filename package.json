{
  "name": "2md",
  "version": "0.0.0",
  "type": "module",
  "repository": "github:o-az/2md",
  "bin": {
    "2md": "./src/cli.mjs"
  },
  "files": [
    "src/cli.mjs"
  ],
  "imports": {
    "#*": "./src/*",
    "#package.json": "./package.json",
    "#wrangler.json": "./wrangler.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "NODE_ENV='production' wrangler --config='wrangler.json' deploy",
    "types": "wrangler types --env-interface CloudflareBindings",
    "check": "biome check . --write --unsafe",
    "check:types": "bun tsgo --project tsconfig.json --noEmit",
    "test:e2e": "./scripts/checks.sh",
    "prepublishOnly": "bun run build:cli"
  },
  "dependencies": {
    "hono": "^4.11.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/vite-plugin": "^1.21.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "^7.0.0-dev.20260122.2",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.8",
    "wrangler": "^4.59.3"
  },
  "license": "MIT",
  "packageManager": "bun@1.3.6"
}
